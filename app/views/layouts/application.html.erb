<!DOCTYPE html>
<html>
<head>
  <title>Kandan</title>
  <%= stylesheet_link_tag  "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/ui-lightness/jquery-ui.css" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=PT+Sans:400,700" %>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= favicon_link_tag %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag  "admin", :media => "all" %>
  <%= yield :javascript_includes %>

  <%= csrf_meta_tags %>

  <%- if user_signed_in? %>
    <%= javascript_tag do %>
      $.data(document, "current-user", <%= current_user_data.to_json.html_safe %>);
    <% end %>
  <%- end %>
<body data-kandan-config="<%= Kandan::Config.to_json %>">
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <a class="brand" href="#"><%=  image_tag 'logo.png' , class: "logo" %></a>
    




    <% if user_signed_in? %>
    <ul class="nav pull-right">
      <li>    
        
          <a class="dropdown-toggle"  role="button" data-toggle="dropdown" data-target="#" href="#">
            <span><%= current_user.full_name_or_username %> </span>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">

           <li> <%= link_to 'Admin console', admin_root_path if current_user.is_admin? %></li>
            <li><%= link_to 'Edit Account', users_edit_path, @users_edit %><br /></li>
            <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
            <hr>
            <li><%= link_to 'About Kandan', about_path, @about %></li>
          </ul>

      </li>
    </ul>
    <% end %>



  </div>
</div>




    <div id="app_body">

    <%= yield %>

    </div>
  </div>
</body>
</html>
