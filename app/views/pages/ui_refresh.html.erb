<%= stylesheet_link_tag  "admin", :media => "all" %>

<style >
	.logo{
		margin-left:15px;
	}
	body{
		overflow:hidden;
	}
	#app_body{
		height:100%;

	}

	#new_ui{
		background-color:red;
		position:relative;
	}

	

	#channel_area{
		position:absolute;
		height:100%;
		left:0px;
		top:0px;
		background-color:#f1f1f1;
	}

	#people_area{
		position:absolute;
		height:100%;
		right:0px;
		top:0px;
		background-color:#f1f1f1;
	}

	#chat_area_wrap{
		position:absolute;
		height:100%;
		top:0px;
		left:50%;
		margin:0 auto;
		height:100%;
		width:66%;
	}

	#chat_area{
		position:relative;
		height:100%;
		top:0px;
		left:-50%;
		margin:0 auto;
		height:100%;
		
	}

	#message_box{
		position:absolute;
		bottom: 10px;
		margin-bottom:0px;
	}
	.send_message{
		width:100%;
	}

	input.send_message{
		height:30px;
	}



	/* Large desktop */
@media (min-width: 1200px) { ... }
 
/* Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 979px) { ... }
 
/* Landscape phone to portrait tablet */
@media (max-width: 767px) {
	#channel_area{
		display:none;
	}
	#chat_area{
		left:0px;
	}

	#people_area{
		display:none;
	}
	#chat_area_wrap{
		position:absolute;
		height:100%;
		top:0px;
		left:0px;
		
		width:100%;
	}
}
 
/* Landscape phones and down */
@media (max-width: 480px) { ...
	#channel_area{
		display:none;
	}
}



</style>

<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
    <a class="brand" href="#"><%=  image_tag 'logo.png' , class: "logo" %></a>
    
    <ul class="nav pull-right">
			<li>		
				
				  <a class="dropdown-toggle"  role="button" data-toggle="dropdown" data-target="#" href="/page.html">
				    <span><%= current_user.full_name_or_username %> </span>
				    <b class="caret"></b>
				  </a>
				  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">

		       <li> <%= link_to 'Admin console', admin_root_path if current_user.is_admin? %></li>
		        <li><%= link_to 'Edit Account', users_edit_path, @users_edit %><br /></li>
		        <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
		        <hr>
		        <li><%= link_to 'About Kandan', about_path, @about %></li>
				  </ul>

			</li>
    </ul>

  </div>
</div>


<div class="row-fluid" id="the_main_wrap">
	
	<div class="span2 side-panel layout_piece" id="channel_area" >
		Channels Area
	</div>

	<div  layout_piece" id="chat_area_wrap">
		<div class="span12 offsetby2 layout_piece" id="chat_area">

			<div class="span12" id="message_box">
			  <div class="span10">
			  <input class="send_message" type="text">
			  </div>
			  <div class="span2">
			  <button class="btn send_message" type="button">Send</button>
				</div>
			</div>
			
		</div>	
	</div>

	<div class="span2 side-panel layout_piece" id="people_area" >
		People Area
	</div>


</div>